---
import DefaultLayout from '../layouts/DefaultLayout.astro';
import ModalCMat from '../components/accessible-astro-components/ModalCMat.astro';
import Pagination from '../components/accessible-astro-components/Pagination.astro';
import Table from '../components/Table.astro';
import MaterialForm from '../components/MaterialForm.astro';
---

<DefaultLayout title="Material">
  <section>
    <h1 id="titulo">Materiales</h1><br>
    <p class="size-20">Muestra de los materiales enviados.</p>
  </section>
  
  <section class="margin-32">
    <div class="space-content">
      <button id="modal-trigger" class="button color-secondary">Agregar nuevo</button>
      <button id="qr-trigger" class="button color-secondary invisible">QR</button>
      <button id="content-trigger" class="button color-success">Cambiar a tabla</button>

      <ModalCMat
        triggerId="modal-trigger"
        title="Crear nuevo material"
        closeText="Cancel"
      >
        <MaterialForm />
      </ModalCMat>

      <ModalCMat
        triggerId="qr-trigger"
        title="QR Generado"
        closeText="Cancel"
        modalSize="100vmin"
      >
        <div class="grid small-grid-1 medium-grid-2">
          <div id="qr-historico" style="margin: auto;
          padding-top: 10px;"/>
          <div id="qr-camino" style="margin: auto;
          padding-top: 10px;"/>
          <a id="qrRef-historico" href="" style="margin: auto; font-size: 1.5rem; font-weight: 200;">Ver historico</a>
          <a id="qrRef-camino" href="" style="margin: auto; font-size: 1.5rem; font-weight: 200;">Ver camino</a>
        </div>
      </ModalCMat>

      {
          <div class="grid small-grid-1 medium-grid-2 large-grid-3 equal-height" style="display: none;" id="content"></div>
          
          <div id="div-tabla">
            <Table>
              <th slot="th">Identificador</th>
              <th slot="th">Nombre</th>
              <th slot="th">Cantidad</th>
              <th slot="th">Procedencia</th>
            </Table>
          </div>
      }

    </div>
    <div class="grid align-horizontal margin-32">
      <Pagination 
        focus={'#titulo'}
        nextPage={'#'}
        totalPages={'#'}
        currentPage={'#'}
      />
    </div>
  </section>
  <div id="cardEditable"></div>
</DefaultLayout>

<script type="text/javascript" src="https://unpkg.com/qr-code-styling@1.5.0/lib/qr-code-styling.js"></script>
<script is:inline>
  const baseApi = (window.location.hostname.includes('localhost')) ?
    'http://localhost:8080/api' :
    'https://dashboard-wundertec.herokuapp.com/api';

  const baseURL = (window.location.hostname.includes('localhost')) ?
      'http://localhost:3000' :
      'https://main.d19h8u6ts9lzi8.amplifyapp.com';

  const obtenerQR = (id = "") => {
    const boton = document.getElementById('qr-trigger');
    
    const qrHistorico = document.getElementById("qr-historico");
    qrHistorico.innerHTML = '';

    const qrCamino = document.getElementById("qr-camino");
    qrCamino.innerHTML = '';

    if (!navigator.userAgent.match(/Android/i) && !navigator.userAgent.match(/iPhone/i)) {
      const qrCodeHistorico = new QRCodeStyling({
          width: 300,
          height: 300,
          type: "svg",
          data: `${baseURL}/historico?id=${id}&tipo=material`,
          image: "https://res.cloudinary.com/nodecafe/image/upload/v1663610000/Dashboard/btrh6itbz41zn31lslsw.png",
          dotsOptions: {
              color: "#33383D",
              type: "rounded"
          },
          backgroundOptions: {
              color: "#ffffff",
          },
          imageOptions: {
              crossOrigin: "anonymous"
          }
      });

      const qrCodeHistoria = new QRCodeStyling({
          width: 300,
          height: 300,
          type: "svg",
          data: `${baseURL}/historia?id=${id}&tipo=material`,
          image: "https://res.cloudinary.com/nodecafe/image/upload/v1662070742/Dashboard/iso27xyjun0hkv1jf8yw.png",
          dotsOptions: {
              color: "#33383D",
              type: "rounded"
          },
          backgroundOptions: {
              color: "#ffffff",
          },
          imageOptions: {
              crossOrigin: "anonymous"
          }
      });

      qrCodeHistoria.append(qrCamino);
      qrCodeHistorico.append(qrHistorico);
    }

    document.getElementById("qrRef-historico").href = `${baseURL}/historico?id=${id}&tipo=material`;
    document.getElementById("qrRef-camino").href = `${baseURL}/historia?id=${id}&tipo=material`;
    
    boton.click();
  };
</script>

<script>
  const button = document.getElementById('content-trigger');
  const content = localStorage.getItem('content');

  if(content == 'table') {
    button.textContent = 'Cambiar a tarjetas';
    document.querySelector('table').style.display = 'table';
  } else {
    button.textContent = 'Cambiar a tabla';
    document.getElementById('content').style.display = 'grid';
  }

  button.addEventListener('click', () => {
    if(button.textContent.trim() == 'Cambiar a tabla') {
      localStorage.setItem('content', 'table');
      button.textContent = 'Cambiar a tarjetas';
      document.getElementById('content').style.display = 'none';
      document.querySelector('table').style.display = 'table';
    } else {
      localStorage.setItem('content', 'grid');
      button.textContent = 'Cambiar a tabla';
      document.getElementById('content').style.display = 'grid';
      document.querySelector('table').style.display = 'none';
    }

    button.blur();
  });
</script>

<style lang="scss" is:global>
  .media {
    width: 100%;
    max-height: 250px;
    object-fit: cover;
  }

  #div-tabla{
    width: 100%;
    overflow-x: auto;
  }
</style>