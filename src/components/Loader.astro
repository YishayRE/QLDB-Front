    </div>
</div>

<script is:inline>
    let hideLoader = () => {
      document.getElementById("divLoader").style.opacity = "0";
      document.getElementById("divLoader").style.visibility = "hidden";
    }
  
    let showLoader = () => {
      document.getElementById("divLoader").style.opacity = "1";
      document.getElementById("divLoader").style.visibility = "visible";
    }
</script>

<style lang="scss" is:global>
    #divLoader{
        position: fixed;
        font-size: 1.5em;
        font-weight: 800;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        background: var(--background);
        z-index: 99999;
    }

    .loader {
        position: absolute;
        top: 50%;
        left: 50%;
        height: 2rem;
        width: 100%;
        
        > .item {
            position: absolute;
            height: 2rem;
            width: 2rem;
            background-color: var(--font-color);
            animation: move 2s linear infinite;
            
            &:nth-of-type(1) {
                top: -2rem;
                left: -2rem;
                animation-delay: calc(-7 * 2s / 8);
            }
            
            &:nth-of-type(2) {
                top: -2rem;
                left: 0;
                animation-delay: calc(-6 * 2s / 8);
            }
            
            &:nth-of-type(3) {
                top: -2rem;
                left: 2rem;
                animation-delay: calc(-5 * 2s / 8);
            }
            
            &:nth-of-type(4) {
                top: 0;
                left: 2rem;
                animation-delay: calc(-4 * 2s / 8);
            }
            
            &:nth-of-type(5) {
                top: 2rem;
                left: 2rem;
                animation-delay: calc(-3 * 2s / 8);
            }
            
            &:nth-of-type(6) {
                top: 2rem;
                left: 0;
                animation-delay: calc(-2 * 2s / 8);
            }
            
            &:nth-of-type(7) {
                top: 2rem;
                left: -2rem;
                animation-delay: calc(-1 * 2s / 8);
            }
            
            &:nth-of-type(8) {
                top: 0;
                left: -2rem;
                animation-delay: calc(0 * 2s / 8);
            }
        }
    }

    @keyframes move {
        0% {
            transform: rotate(0) scale(1);
            animation-timing-function: ease-in;
        }
        10% {
            transform: rotate(90deg) scale(0);
        }
        50% {
            transform: rotate(90deg) scale(0);
            animation-timing-function: ease-out;
        }
        60% {
            transform: rotate(180deg) scale(1);
        }
        100% {
            transform: rotate(180deg) scale(1);
        }
    }
</style>